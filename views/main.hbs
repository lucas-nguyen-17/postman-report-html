<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">

        <title>Postman Result Summary</title>
    </head>

    <body class="bg-body-tertiary">
    <main class="container pb-4">
        <div class="d-flex align-items-center mt-5">
            <h2>API report: {{summary.name}}</h2>
        </div>

        <div class="my-3 p-3 bg-body rounded shadow-sm">
            <h6 class="border-bottom pb-2 mb-0 text-danger">Overview</h6>
            <div class="d-flex text-body-secondary pt-3">
                <ul>
                    <li>Start time: {{summary.startedAt}}</li>
                    <li>End time: {{summary.timestamp}}</li>
                    <li>Duration: {{duration}} ms</li>
                    <li style="color:green;">Total Pas: {{summary.totalPass}}</li>
                    <li style="color:red;">Total Fail: {{summary.totalFail}}</li>
                </ul>
            </div>
        </div>

        {{#each summary.results}}
            <div class="mt-4 p-3 rounded border border-info-subtle">
                <div class="">
                    <p class="mb-1"><b>Name</b>: {{name}}</p>
                    <p><b>URL</b>: {{url}}</p>
                </div>

                <div class="my-3 p-3 bg-body rounded shadow-sm">
                    <h6 class="border-bottom pb-2 mb-0 text-danger">Test result</h6>
                    {{#each allTests}}
                        <div class="text-body-secondary pb-4 mt-2 border-bottom ">
                            <h6 class="pb-2 mb-0">Test run at {{countTest @index}}</h6>
                            <div class="p-2 bg-body-tertiary border rounded-2">
                                <pre class="m-0">{{toString this}}</pre>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        {{/each}}
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
    </body>
</html>
